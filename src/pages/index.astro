---
import CanvasContainer from '../components/CanvasContainer.astro'
import Layout from '../components/Layout.astro'
import Link from '../components/Link.astro'
---

<Layout title="Demo">
  <main>
    <CanvasContainer />
    <div class="touch-area sp"></div>
    <Link class="link" href="https://github.com/nemutas/ws-report2" target="_blank" rel="noopener noreferrer">Github</Link>
  </main>
</Layout>

<style lang="scss">
  main {
    width: 100%;
    height: 100%;
  }
  .link {
    position: absolute;
    bottom: 1rem;
    right: 2rem;
  }
  .touch-area {
    position: absolute;
    width: 50%;
    aspect-ratio: 1 / 1;
    border-radius: 50%;
    border: 1px dashed #fff2;
    left: 50%;
    top: 50%;
    translate: -50% -50%;
  }
</style>
